@import url(http://fonts.googleapis.com/css?family=Roboto:500,100,400);

@import url(http://fonts.googleapis.com/css?family=Oswald:500,100,400);


*{
   background-color: rgba(38, 160, 106, 0.9);
  }



#header{
  font-family: Roboto Slab;
  color: rgba(207, 44, 51, 0.7);
  font-size:70px;
  text-align:center;
  text-shadow: -3px 2px 8px gray;
  margin-bottom:5px;
  margin-top:90px;

    &:after{
    margin-top:10px;
    margin-left:10%;
    margin-right:10%;
    content:'';
    background-color:gray;
    height:3px;
    border-radius:25%;
    display:block;
    width:80%;
  }
 }


ul{
  display:inline-block;
  margin-top: 10px;
  font-family: Oswald;
  font-size:25px;
  margin-left:32%;
}



a{
  text-decoration: none;
  color:black;
  
  &:hover{
      text-transform:uppercase;
      font-size:30px;
      text-shadow: -1px 1px 3px #FFF;

  } 
  
  
  
}

.active{
      text-transform:uppercase;
       font-size:30px;
        text-shadow: -1px 1px 3px #FFF;

}

li{
  list-style-type: none;
  display:inline-block;
  position: relative;
  padding-right:50px;
}

#content{
  height:500px;
  width: 1000px;
  margin-left: 10%;
  border: 1px solid black;
  padding-top: 2%;
  padding-left: 30px;
  font-family: Roboto Slab;
  font-size: 30px;
}


