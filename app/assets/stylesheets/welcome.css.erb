.container-fluid{
	background-image: url(<%= asset_path 'footer_lodyas.png'%>);
}



.jumbotron{
	background-color:#393566;
	color:#FAFAFA;
	margin-top: 10px;
	margin-left:75px;
}

@-webkit-keyframes bounce {
	from {
		margin-left: 0px;
	}
	to {
		margin-left: 320px;
	}
 }


.glyphicon:hover {
	-webkit-animation-name: bounce;
	-webkit-animation-duration: 1s;
	-webkit-animation-iteration-count: 2;
	-webkit-animation-direction: alternate;
  }



.glyphicon{
	margin-right:auto;
	margin-left:auto;
	padding-top: 5px;
	font-size:40px;
	padding-right:20px;
	color: gray;
	animation: bounce;
}

.active{
	color: white;
}

button{
	background-color:black;
	color: gray;
	border-radius: 20px;
	height: 50px;
	width: 120px;
	border: 1px solid #393566;
}

button:hover {
    color: white;
}
